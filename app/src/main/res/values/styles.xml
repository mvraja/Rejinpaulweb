<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <!-- no title bar -->
    <style name="AppTheme.NoTitleBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- no title bar & full screen -->
    <style name="AppTheme.NoTitleBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorBrown</item>
    </style>

    <style name="wh_mm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wh_mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wh_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttonStyle" parent="wh_mw">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/rounded_button_bg</item>
        <item name="android:padding">5dp</item>
        <item name="android:minHeight">30dp</item>
    </style>

    <style name="imageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/logo1</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorYellow</item>
    </style>

    <style name="layoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/logonbg</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="editTextStyle" parent="wh_mw">
        <item name="android:background">@drawable/round_edit_text</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textStyle" parent="wh_mw">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="radioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:colorControlActivated">@color/colorOrange</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:buttonTint">@color/colorOrange</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="gridViewText" parent="wh_ww">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="listViewTitle" parent="wh_ww">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorYellow</item>
    </style>

    <style name="listViewText" parent="wh_ww">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBeige</item>
    </style>

    <style name="brown_splitter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorBrown</item>
        <item name="android:alpha">0.2</item>
    </style>


    <style name="spinnerTheme" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="timePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


</resources>